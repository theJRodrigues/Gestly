{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ES6", "DOM"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths":{
      "@controllers/*": ["controllers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@repositories/*": ["middlewares/*"],
      "@models/*": ["middlewares/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"]
    }
  }
}
